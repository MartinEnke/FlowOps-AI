{
  "name": "flowops-ai",
  "version": "1.0.0",
  "main": "dist/server.js",
  "license": "ISC",
  "scripts": {
  "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
  "dev:worker": "ts-node-dev --respawn --transpile-only src/workers/outboxWorker.ts",
  "build": "tsc",
  "start": "node dist/server.js",
  "start:worker": "node dist/workers/outboxWorker.js",
  
  "dev:outbox-worker": "node -r dotenv/config ./node_modules/.bin/ts-node-dev --respawn --transpile-only src/workers/outboxWorker.ts",
  "dev:sla-worker": "node -r dotenv/config ./node_modules/.bin/ts-node-dev --respawn --transpile-only src/workers/slaWorker.ts"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^25.0.2",
    "prisma": "^7.1.0",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@prisma/adapter-better-sqlite3": "^7.1.0",
    "@prisma/client": "^7.1.0",
    "better-sqlite3": "^12.5.0",
    "dotenv": "^17.2.3",
    "fastify": "^5.6.2",
    "lodash": "^4.17.21"
  }
}
