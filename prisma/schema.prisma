// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
}

model Customer {
  id        String   @id
  email     String
  plan      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  interactions Interaction[]
  tickets      Ticket[]
  handoffs     Handoff[]
}

model Interaction {
  id          String   @id @default(cuid())
  customerId  String
  channel     String
  requestText String
  replyText   String
  mode        String
  confidence  Float
  escalated   Boolean
  verified    Boolean
  actionsJson String
  requestId   String?   // ✅ MUST exist
  ticketId    String?   // ✅ MUST exist
  createdAt   DateTime @default(now())

  customer Customer @relation(fields: [customerId], references: [id], onDelete: Cascade)

  @@index([customerId])
  @@unique([customerId, requestId])
}

model Ticket {
  id         String   @id @default(cuid())
  customerId String
  subject    String
  summary    String
  priority   String
  status     String   @default("open")
  mode       String
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  customer Customer @relation(fields: [customerId], references: [id], onDelete: Cascade)

  handoffs Handoff[] // ✅ ADD THIS

  @@index([customerId])
}

model Handoff {
  id          String  @id @default(cuid())
  customerId  String
  ticketId    String // ✅ make required
  reason      String
  priority    String  @default("med")
  status      String  @default("pending")
  mode        String
  confidence  Float?
  issuesJson  String?
  actionsJson String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  customer Customer @relation(fields: [customerId], references: [id], onDelete: Cascade)
  ticket   Ticket   @relation(fields: [ticketId], references: [id], onDelete: Cascade) // ✅ ADD THIS

  @@index([customerId])
  @@index([status])
  @@index([ticketId]) // ✅ nice to have
}
