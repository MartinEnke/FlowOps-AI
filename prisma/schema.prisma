// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
}

model Customer {
  id        String   @id
  email     String
  plan      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  interactions Interaction[]
  tickets      Ticket[]
  handoffs     Handoff[]
}

model Interaction {
  id          String   @id @default(cuid())
  customerId  String
  channel     String
  requestText String
  replyText   String
  mode        String
  confidence  Float
  escalated   Boolean
  verified    Boolean
  actionsJson String
  requestId   String? // ✅ MUST exist
  ticketId    String? // ✅ MUST exist
  createdAt   DateTime @default(now())

  customer Customer @relation(fields: [customerId], references: [id], onDelete: Cascade)

  @@unique([customerId, requestId])
  @@index([customerId])
}

model Ticket {
  id         String   @id @default(cuid())
  customerId String
  subject    String
  summary    String
  priority   String
  status     String   @default("open")
  mode       String
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  customer Customer @relation(fields: [customerId], references: [id], onDelete: Cascade)

  // ✅ 7.1+ relation: one Ticket -> many Handoffs
  handoffs Handoff[]

  @@index([customerId])
}

model Handoff {
  id          String  @id @default(cuid())
  customerId  String
  ticketId    String?
  reason      String
  priority    String  @default("med")
  status      String  @default("pending")
  mode        String
  confidence  Float?
  issuesJson  String?
  actionsJson String?

  // ✅ 7.4 workflow fields
  claimedBy       String?
  claimedAt       DateTime?
  resolvedBy      String?
  resolvedAt      DateTime?
  resolutionNotes String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  customer Customer @relation(fields: [customerId], references: [id], onDelete: Cascade)

  // ✅ THIS is the missing opposite side
  ticket Ticket? @relation(fields: [ticketId], references: [id], onDelete: SetNull)

  @@index([customerId])
  @@index([status])
  @@index([ticketId])
}
