// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
}

model Customer {
  id        String   @id
  email     String
  plan      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  interactions Interaction[]
  tickets      Ticket[]
  handoffs     Handoff[]
}

model Interaction {
  id          String   @id @default(cuid())
  customerId  String
  channel     String
  requestText String
  replyText   String
  mode        String
  confidence  Float
  escalated   Boolean
  verified    Boolean
  actionsJson String
  requestId   String?
  ticketId    String?
  createdAt   DateTime @default(now())

  customer Customer @relation(fields: [customerId], references: [id], onDelete: Cascade)

  @@unique([customerId, requestId])
  @@index([customerId])
}

model Ticket {
  id         String   @id @default(cuid())
  customerId String
  subject    String
  summary    String
  priority   String
  status     String   @default("open")
  mode       String
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  customer Customer @relation(fields: [customerId], references: [id], onDelete: Cascade)

  handoffs Handoff[]

  @@index([customerId])
}

model Handoff {
  id            String       @id @default(cuid())
  customerId    String
  ticketId      String?
  reason        String
  priority      String       @default("med")
  status        String       @default("pending")
  mode          String
  confidence    Float?
  issuesJson    String?
  actionsJson   String?
  slaDueAt      DateTime?
  slaBreachedAt DateTime?
  aiArtifacts   AiArtifact[]

  claimedBy       String?
  claimedAt       DateTime?
  resolvedBy      String?
  resolvedAt      DateTime?
  resolutionNotes String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  customer Customer @relation(fields: [customerId], references: [id], onDelete: Cascade)

  ticket Ticket? @relation(fields: [ticketId], references: [id], onDelete: SetNull)

  @@index([customerId])
  @@index([status])
  @@index([ticketId])
}

model OutboxEvent {
  id          String @id @default(cuid())
  type        String
  payloadJson String

  // pending -> processing -> sent
  // pending -> processing -> failed -> pending (retry)
  // failed -> dead (after max attempts)
  status String @default("pending")

  attempts      Int      @default(0)
  nextAttemptAt DateTime @default(now())
  lastError     String?

  // critical: prevent duplicate deliveries
  idempotencyKey String @unique

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([status, nextAttemptAt])
  @@index([type])
}

model AiArtifact {
  id String @id @default(cuid())

  handoffId String
  handoff   Handoff @relation(fields: [handoffId], references: [id], onDelete: Cascade)

  type String

  status     String
  inputJson  String
  outputJson String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([handoffId, type])
  @@index([handoffId])
  @@index([type])
}
